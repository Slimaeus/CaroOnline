            <div class="progress-bar progress-bar-striped progress-bar-animated fs-6 bg-info" role="progressbar" style="width: 50%;" aria-valuenow="@Model.Score" aria-valuemin="0" aria-valuemax="500">Exp: @Model.Exp</div>
        </div>*@

        @*<img class="card-img" src="https://img.freepik.com/premium-vector/meadows-landscape-with-mountains-hill_104785-943.jpg?w=2000" alt="Profile image" />*@
        
    </div>
</div>