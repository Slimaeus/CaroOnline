@model UserResponse
<div class="container">
    <div class="card mb-3">
        <h1 class="card-header text-center text-bg-info"><i class="bi bi-person-fill"></i> Profile</h1>
        <div class="card-body">
            <h2 class="card-title text-center display-2">@Model.InGameName</h2>
            <h3 class="card-subtitle text-center text-muted">UserName: @Model.UserName</h3>
            <p class="card-text text-center">Email: @Model.Email</p>
        </div>
        <div class="d-flex mx-2">
            <span class="badge bg-danger mx-2 fs-5">Level: @Model.Level</span>
            <span class="badge rounded-pill bg-dark fs-5">Score: @Model.Score</span>
        </div>
        <hr />
        <ul class="list-group">
            <li class="list-group-item">
                <a asp-action="Profile">Profile</a>
            </li>
            <li class="list-group-item">
                <a asp-action="ForgotPassword">Forgot Password</a>
            </li>
            <li class="list-group-item">
                <a asp-action="ChangePassword">Change Password</a>
            </li>
            <li class="list-group-item">
                <a asp-action="Logout">Logout</a>
            </li>
        </ul>
