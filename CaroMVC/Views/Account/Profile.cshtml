@{
}
@model UserResponse
<div class="container">
    <div class="card mb-3">
        <h1 class="card-header text-center text-bg-info"><i class="bi bi-person-fill"></i> Profile</h1>
        <div class="card-body">
            <h2 class="card-title text-center display-2">@Model.InGameName</h2>
            <h3 class="card-subtitle text-center text-muted">UserName: @Model.UserName</h3>
        </div>

        <div class="d-flex mx-2">
            <div class="row justify-content-start container-fluid">
                <span class="badge bg-danger mx-2 col-1 fs-5">Level: @Model.Level</span>
                <span class="badge rounded-pill bg-dark col-2 fs-5">Score: @Model.Score</span>
            </div>
        </div>
        <div class="progress mx-3 my-lg-2" style="height: 20px;">
            <div class="progress-bar progress-bar-striped progress-bar-animated fs-6 bg-info" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">Exp: @Model.Exp</div>
        </div>

        <img class="card-img" src="https://img.freepik.com/premium-vector/meadows-landscape-with-mountains-hill_104785-943.jpg?w=2000" alt="Profile image" />
        <div class="card-body">
            <p class="card-text">Email: @Model.Email</p>
        </div>
    </div>
</div>