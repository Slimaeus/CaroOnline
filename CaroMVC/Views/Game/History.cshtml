@using Model.ActionModels
@model HistoryModel
<body>
    <div class="container">
        <h1 class="text-center">HISTORY</h1>
        <p class="text-muted text-center">Caro Online - @DateTime.Now.ToString()</p>
        <table id="table-history" class="table table-warning table-hover my-2">
            <thread>
                <tr class="table-active">
                    <th>Id</th>
                    <th>Total Time</th>
                    <th>Opponent</th>
                    <th>Result </th>
                    <th>Score</th>
                </tr>
            </thread>
            <tbody>
                @foreach (var item in Model.Input.Items)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.TotalTime.ToString(@"hh\:mm\:ss")</td>
                        <td>@item.OpponentInGameName</td>
                        <td>@item.Status</td>
                        <td>@item.Score</td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            <ul class="pagination justify-content-center">
                @if (Model.Input.HasPrevious)
                {
                    <li class="page-item">
                        <a asp-action="History" asp-route-pageIndex="@(@Model.Input.PageIndex - 1)" class="page-link">&laquo;</a>
                    </li>
                }
                @for (int i = 1; i <= Model.Input.PageCount; i++)
                {
                    <li class="page-item">
                        <a asp-action="History" asp-route-pageIndex="@i" class="page-link">@i</a>
                    </li>
                }
                @if (Model.Input.HasNext)
                {
                    <li class="page-item">
                        <a asp-action="History" asp-route-pageIndex="@(@Model.Input.PageIndex + 1)" class="page-link">&raquo;</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</body>